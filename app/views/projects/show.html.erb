<div class="card">
  <div class="card-body p-4">
    <p class="project-title white"><%= @project.title %></p>
    <%= (@project.title).parameterize %>

    <%= @project.content %>

    <div class="d-flex mt-5">
      <%= link_to edit_project_path(@project), class: "btn btn-primary mx-1" do %>
        <i class="bi bi-pencil-square"></i>
      <% end %>

      <%= link_to projects_path, class: "btn btn-secondary mx-1" do %>
        <i class="bi bi-arrow-return-left"></i>
      <% end %>

      <%= button_to @project, method: :delete, class: "btn btn-danger mx-1" do %>
        <i class="bi bi-trash"></i>
      <% end %>
    </div>
  </div>
</div>
