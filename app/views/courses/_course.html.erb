<div id="<%= dom_id course %>">
  <div class="card">
    <div class="card-body d-flex justify-content-between p-4 align-items-center">
      <div>
        <div class="white h5 m-0">
          <%= course.name %>
        </div>
        <p class="body-1 text-secondary m-0">
          <%= course.start_date.strftime("%b/%Y") %> | <%= course.end_date.nil? ? "Now":course.end_date.strftime("%b/%Y") %>
        </p>
      </div>

      <div>
        <%= link_to edit_course_path(course), class: "btn btn-primary" do %>
          <i class="bi bi-pencil-square"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
