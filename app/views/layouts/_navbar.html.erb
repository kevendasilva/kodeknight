<header id="header" class="header fixed-top d-flex align-items-center drop-shadow">

  <div class="d-flex align-items-center justify-content-between">
    <i class="bi bi-list toggle-sidebar-btn"></i>
    <a href="<%= admin_index_path %>" class="logo mx-3">
      <%= image_tag "icons/mini-white.svg" %>
    </a>
  </div>

  <nav class="header-nav ms-auto">
    <ul class="d-flex align-items-center">
      <li class="nav-item dropdown pe-3">
        <a class="nav-link nav-profile d-flex align-items-center pe-0" data-bs-toggle="dropdown">
          <span class="d-none d-md-block dropdown-toggle ps-2 body-1">Settings</span>
        </a>
        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
          <li class="dropdown-header">
            <h6 class="white">Keven da Silva</h6>
            <span class="body-1">The knight</span>
          </li>
          <li>
            <hr class="dropdown-divider">
          </li>
          <li>
            <a class="dropdown-item d-flex align-items-center" href="<%= edit_admin_registration_path %>">
              <i class="bi bi-person"></i>
              <span>My Profile</span>
            </a>
          </li>
          <li>
            <hr class="dropdown-divider">
          </li>
          <li>
            <%= button_to destroy_admin_session_path, method: :delete, class: "dropdown-item d-flex align-items-center" do %>
              <i class="bi bi-box-arrow-right"></i>
              <span class="white">Sign Out</span>
            <% end %>
          </li>
        </ul>
      </li>
    </ul>
  </nav>
</header>
